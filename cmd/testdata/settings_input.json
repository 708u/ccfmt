{
  "permissions": {
    "deny": [
      "mcp__dangerous_tool",
      "Bash(rm -rf *)"
    ],
    "allow": [
      "Write",
      "Bash",
      "Read",
      "Edit"
    ]
  },
  "env": {
    "SOME_TOKEN": "xxx",
    "API_KEY": "yyy"
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": ["echo pre-bash"]
      }
    ],
    "PostToolUse": []
  },
  "defaultMode": "bypassPermissions",
  "apiKeyHelper": "security find-generic-password -s claude-api-key -w"
}
